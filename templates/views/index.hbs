        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/handlebars@latest/dist/handlebars.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <title>Image Gallery</title>

</head>
<body>
    {{>navbar}}
    <div class="container">
        <form class="mt-5" action="/image" method="post" enctype="multipart/form-data">

            <div class="input-group mt-3 ">
                <input type="file" class="form-control" id="inputGroupFile02" name="uploaded_image">
                <input type="submit" class="input-group-text" value="Add Image">
            </div>

            <p id="upload_log"></p>
        </form>

        <div class="row row-cols-4 mt-5">
            {{#each images}}
                <div class="col">
                    <div class="card" style="width: 18rem;">
                        <img src="{{path}}" class="card-img-top" alt="{{originalname}}">
                        <div class="card-body">
                            <h5 class="card-title">{{originalname}}</h5>
<!--                            <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>-->
                            <form class="mt-3" action="/delete?id={{_id}}" method="post" enctype="multipart/form-data">
                                <button type="submit" class="btn btn-primary mb-3">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            {{/each}}


